{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

	<h1>Détails de votre commande n° {{commande.id}}</h1>

	<div class="container d-flex">

		{% for commandeDetail in commandeDetails %}
			<div class="p-3 m-3">
				<div>
					<img src="{{commandeDetail.legume.image}}" class="img-fluid">
				</div>
				<div>
					<h6>
						<b>{{commandeDetail.legume.variete}}</b>
					</h6>
					<p class="card-text" style="color:grey">{{commandeDetail.legume.prix}} €/kg</p>
					<p class="card-text text-primary">
						<b>{{commandeDetail.prix}}
							€</b>
					</p>
				</div>
			</div>


		{% endfor %}

	</div>


{% endblock %}
