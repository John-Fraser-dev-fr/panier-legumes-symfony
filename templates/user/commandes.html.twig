{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

	<h2 class="mt-5 mb-5">Mes annonces</h2>

	{% if commandes|length == null %}

		<h2 class="mt-5">Vous n'avez aucune annonce.</h2>

	{% else %}

		<table class="table table-hover mt-5">
			<thead>
				<tr>
					<th scope="col">Commande n°</th>
					<th scope="col">Montant</th>
					<th scope="col">Date</th>
					<th scope="col">Status</th>
				</tr>
			</thead>
			<tbody>
				{% for commande in commandes %}

					<tr>
						<td>{{commande.id}}</td>
						<td>{{commande.montant | number_format(2, ',', ' ')}} €</td>
						<td>{{commande.date | date('d/m/Y à H:i')}}</td>
						{% if commande.status == 0 %}
                            <td>En attente de validation</td>
                        {% endif %}
                        {% if commande.status == 1 %}
                            <td>Validée</td>
                        {% endif %}      
					</tr>
				{% endfor %}
			</tbody>
		</table>

	{% endif %}


{% endblock %}
